                        android:id="@+id/notif4_img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#b0b0b0"
                        android:padding="8dip"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_launcher_foreground"/>

                    <TextView

                        android:id="@+id/notif4_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#b0b0b0"
                        android:padding="8dip"
                        android:layout_weight="1"
                        android:text="@string/notifications_notif4_text"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <Button

                        android:id="@+id/notif4_action"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#b0b0b0"
                        android:padding="8dip"
                        android:layout_weight="1"
                        android:text="@string/notifications_action_text"
                        android:textSize="12dp"/>

                </TableRow>

                <TableRow

                    android:id="@+id/notif5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <!-- first element of the row-->
                    <ImageView

                        android:id="@+id/notif5_img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#b0b0b0"
                        android:padding="8dip"

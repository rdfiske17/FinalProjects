<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationsFragment">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/projectlist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:text="@string/notifications_title_text"
                style = "@style/TEXT"
                android:textAlignment="center"/>


            <TableLayout
                android:id="@+id/notifications_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp">

                <!-- first row of the table layout-->
                <TableRow

                    android:id="@+id/notif1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <!-- first element of the row-->
                    <ImageView

                        android:id="@+id/notif1_img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#b0b0b0"
                        android:padding="8dip"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_launcher_foreground"/>

                    <TextView

                        android:id="@+id/notif1_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#b0b0b0"
                        android:padding="8dip"
                        android:layout_weight="1"
                        android:text="@string/notifications_notif1_text"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <Button

                        android:id="@+id/notif1_action"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#b0b0b0"
                        android:padding="8dip"
                        android:layout_weight="1"
                        android:text="@string/notifications_action_text"
                        android:textSize="12dp"/>

                </TableRow>

                <TableRow

                    android:id="@+id/notif2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <!-- first element of the row-->

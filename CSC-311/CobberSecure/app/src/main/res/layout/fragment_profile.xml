<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_notif_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:padding="15dp"
            app:tint = "@color/grey"
            app:srcCompat="@drawable/bell"/>

        <ImageView
            android:id="@+id/profile_prof_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            app:srcCompat="@drawable/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:text="@string/profile_name"
            android:textSize="12sp"
            style = "@style/TEXT"
            />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:text="@string/profile_email"
            android:textSize="12sp"
            style = "@style/TEXT"
            />

        <TextView
            android:id="@+id/profile_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:text="@string/profile_bio"
            android:textSize="12sp"
            style = "@style/TEXT"
            />

        <Button
            android:id="@+id/profile_to_friendlist_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="@string/profile_friendlist_button_text" />

        <Button
            android:id="@+id/profile_to_editprofile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/profile_edit_profile_button_text"
             />


    </LinearLayout>

</FrameLayout>